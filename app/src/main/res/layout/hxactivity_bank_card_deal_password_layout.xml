<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:focusableInTouchMode="false"
    android:orientation="vertical" 
   >

    <include layout="@layout/hxtop_title_bar_layout" />

    <TextView
        android:id="@+id/set_deal_password_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dip"
        android:layout_gravity="center_horizontal"
        android:text="@string/set_deal_password_text1"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/T5" />

    <com.zhongan.demo.hxin.view.JYPEditText
        android:layout_marginTop="20dp"
        android:id="@+id/deal_passwordnum_et"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dip"
        android:layout_height="45dip"
        android:maxLength="@integer/max_len"  
        android:password="@bool/is_password" 
        android:cursorVisible="false"/>

</LinearLayout>