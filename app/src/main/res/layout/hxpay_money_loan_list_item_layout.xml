<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_gravity="center_vertical"
        android:background="@color/color_ffffff" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_marginRight="25dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/pay_money_pay_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="10000"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/T6" />

            <TextView
                android:id="@+id/pay_money_pay_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_money_pay_num_tv"
                android:layout_marginTop="15dip"
                android:text="2017-03-14借"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/T2" />

            <TextView
                android:id="@+id/pay_money_qishu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="3/6"
                android:textColor="@color/color_738cc4"
                android:textSize="@dimen/T6" />

            <TextView
                android:id="@+id/pay_money_pay_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/pay_money_qishu_tv"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:text="还款中"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/T2" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/pay_money_enter_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:src="@drawable/m_icon_enter" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:background="@color/color_d9d9d9" />

    <TextView
        android:id="@+id/pay_money_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/color_e6e6e6"
        android:gravity="center"
        android:text="@string/pay_money_pay_text"
        android:textColor="@color/color_cccccc"
        android:textSize="@dimen/T5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:background="@color/color_d9d9d9"
        android:layout_marginBottom="6dip" />

</LinearLayout>