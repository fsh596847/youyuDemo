<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@mipmap/rskj_big"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="32sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:text="手机号"
        />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:maxLength="11"
        android:inputType="phone"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/MyEditText"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.6dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="验证码"
            />

        <!--<Button-->
            <!--android:id="@+id/get_code"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:background="@drawable/button_shape_login"-->
            <!--android:textColor="@color/code_selector"-->
            <!--android:textSize="12sp"-->
            <!--android:padding="10dp"-->
            <!--android:gravity="center"-->
            <!--android:text="获取验证码"-->
            <!--/>-->

        <Button
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_shape_login"
            android:textColor="@color/rskj_login_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="获取验证码"
            android:textSize="12sp" />

    </RelativeLayout>


    <EditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:maxLength="11"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/MyEditText"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:drawablePadding="15dp"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.6dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="密  码"
            />

        <CheckBox
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:button="@null"
            android:textSize="12sp"
            android:gravity="center"
            android:text="显示"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:maxLength="11"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/MyEditText"
        android:inputType="textPassword"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:paddingLeft="15dp"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.6dp"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:text="渠道号(选填)"
        />

    <EditText
        android:visibility="gone"
        android:id="@+id/recommend_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:maxLength="11"
        android:inputType="text"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/MyEditText"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="24sp" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_selector"
            />

        <TextView
            android:id="@+id/link_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white0"
            android:textSize="12sp"
            android:text="我已阅读并完全同意《注册服务协议》"/>

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/button_shape_login"
        android:textColor="@color/rskj_login_selector"
        android:text="注册"
        android:textSize="18sp" />

</LinearLayout>