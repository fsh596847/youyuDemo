<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <include layout="@layout/hxtop_title_bar_layout" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dip"
        android:scrollbars="none">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/name_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_name_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="辛文博"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_idcard_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_idcard_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="412728199207160039"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_daikuanjine_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_loan_num_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="10000"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_daikuanqixian_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_daikuanqixian_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="6个月"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_start_end_date_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_start_end_date_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="2017-01-26~2017-06-26"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_day_lilv_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_lilv_day_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="0.01%"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_pay_type_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_loan_pay_type_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="等额本金"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" 
         >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_pay_yinhang_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_pay_yanhang_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="中信银行 储蓄卡 (0704)"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
         >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_loan_yinhang_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_loan_yinhang_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="招商银行"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:weightSum="2" 
       >

        <TextView
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:text="@string/loan_money_hetong_text"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_look_hetong_tv"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_weight="1.3"
            android:gravity="center_vertical|right"
            android:text="@string/loan_money_look_hetong_text"
            android:textColor="@color/color_738cc4"
            android:textSize="@dimen/T4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:background="@color/color_ffffff"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <EditText
            android:id="@+id/loan_money_yzm_et"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@null"
            android:hint="@string/input_mobile_yzm_text"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:inputType="number"
            android:gravity="center_vertical"
            android:maxLength="6"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_d9d9d9"
            android:textSize="@dimen/T2" />

        <View
          
            android:layout_width="@dimen/line_high"
            android:layout_height="30dip"
            android:background="@color/color_ff7920"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/loan_money_yzm_btn"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:background="@null"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="@string/yzm_btn_text"
            android:textColor="@color/color_ff7920"
            android:textSize="@dimen/T2" />
    </LinearLayout>
   <Button
        android:id="@+id/loan_money_third_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_btn_height"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/hxcommon_btn_normal_bg"
        android:gravity="center"
        android:text="@string/submit_text"
        android:textColor="@color/color_ffffff"
        android:layout_marginBottom="20dip"
        android:textSize="@dimen/T5" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>