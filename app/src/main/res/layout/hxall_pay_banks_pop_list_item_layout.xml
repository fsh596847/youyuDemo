<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip" >

    <ImageView
        android:id="@+id/pay_bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_layout_margin" 
        android:background="@drawable/m_icon_jianhang_logo"/>

    <TextView
        android:id="@+id/pay_bank_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/pay_bank_icon"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/T6" />

    <ImageView
        android:id="@+id/pay_bank_selected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_layout_margin"
        android:visibility="gone"
        android:background="@drawable/m_icon_selected" />

    <View
        android:id="@+id/pay_bank_line_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/common_layout_margin"
        android:background="@color/color_e5e5e5" />

    <View
        android:id="@+id/pay_bank_line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e5e5e5"
        android:visibility="gone" />

</RelativeLayout>