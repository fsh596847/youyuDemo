<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <include layout="@layout/hxtop_title_bar_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="6dip"
        android:background="@color/color_ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:text="@string/loan_money_loan_num_text"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/T4" />

        <TextView
            android:id="@+id/loan_money_loan_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:text="10000(å…ƒ)"
            android:textColor="@color/color_738cc4"
            android:textSize="@dimen/T4" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:background="@color/color_e5e5e5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff" >

        <TextView
            android:id="@+id/loan_money_canusednum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dip"
            android:layout_marginTop="22dip"
            android:background="@drawable/m_icon_seek_bar_number_bg_normal"
            android:gravity="center_horizontal"
            android:padding="2dip"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/T0" />

        <com.zhongan.demo.hxin.view.TSeekBar
            android:id="@+id/loan_money_seek_bar"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:indeterminateOnly="false"
            android:max="50"
            android:progress="1"
            app:imgbottom="@drawable/m_icon_seek_bar_shoubing"
            app:imgtop="@drawable/m_icon_seek_bar_number_bg_selected"
            app:textcolor="@color/color_ffffff"
            app:textsize="@dimen/T0" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/loan_money_loan_month_fl"
            android:layout_width="match_parent"
            android:layout_height="45dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_layout_margin"
                android:gravity="center_vertical"
                android:text="@string/loan_money_loan_month_text"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/T4" />

            <TextView
                android:id="@+id/loan_money_loan_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/common_layout_margin"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/m_icon_enter"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/T4" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_high"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:background="@color/color_e5e5e5" />

        <FrameLayout
            android:id="@+id/loan_money_pay_type_fl"
            android:layout_width="match_parent"
            android:layout_height="45dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_layout_margin"
                android:gravity="center_vertical"
                android:text="@string/loan_money_pay_type_text"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/T4" />

            <TextView
                android:id="@+id/loan_money_pay_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/common_layout_margin"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/m_icon_enter"
                android:gravity="center_vertical"
               
                android:textColor="@color/color_666666"
                android:textSize="@dimen/T4" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loan_money_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_layout_margin"
        android:layout_marginRight="@dimen/common_layout_margin"
        android:layout_marginTop="10dip"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/T0" />
  <Button
        android:id="@+id/loan_money_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_btn_height"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/hxcommon_btn_normal_bg"
        android:gravity="center"
        android:text="@string/submit_text"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/T5" />
</LinearLayout>