<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff" >
 
   <include android:id="@+id/top_bar" layout="@layout/hxtop_title_bar_layout"/>
   
   <include 
       layout="@layout/hxface_tip_layout"
       android:visibility="visible"/>

    <Button
        android:id="@+id/face_start_liveness_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_btn_height"
        android:layout_marginTop="60dip"
        android:background="@drawable/hxcommon_btn_normal_bg"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="@dimen/common_layout_margin"
        android:layout_marginRight="@dimen/common_layout_margin"
        android:gravity="center"
        android:text="@string/start_face"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/T5"
        android:visibility="visible" />

    
   <include  layout="@layout/hxface_network_warring_layout"/>

</LinearLayout>