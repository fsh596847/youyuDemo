<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/m_icon_common_bg" >

            <FrameLayout
                android:layout_width="140dip"
                android:layout_height="140dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dip"
                android:background="@drawable/hxcricle_normal_bg" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/total_used_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/color_ff7920"
                         android:textSize="@dimen/T6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dip"
                        android:text="@string/can_used_num_tip_text"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/T1" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/loan_btn"
                android:layout_width="120dip"
                android:layout_height="34dip"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dip"
                android:background="@drawable/hxcommon_btn_normal_bg_no_color"
                android:gravity="center"
                android:text="@string/want_loan_text"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/T2"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/loan_pay_money_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/loan_money_btn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/m_icon_loan_money"
                    android:gravity="center"
                    android:padding="0dip"
                    android:text="@string/loan_money_text"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/T2" />

                <TextView
                    android:id="@+id/loan_pay_money_btn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/m_icon_repayment"
                    android:gravity="center"
                    android:padding="0dip"
                    android:text="@string/pay_money_text"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/T2" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout> 
    <ImageView
        android:layout_marginTop="6dip" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/m_img_shouye_bottom"/>
