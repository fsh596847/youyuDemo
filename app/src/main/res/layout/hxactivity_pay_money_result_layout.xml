<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/hxtop_title_bar_layout" />
   
            <ImageView
        android:id="@+id/pay_money_result_iv"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:src="@drawable/m_icon_pay_money_sucess" />

   

    <TextView
        android:id="@+id/pay_money_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:text="@string/pay_money_success_tip"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/T6" />
   
       
   
</LinearLayout>