<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_layout_margin"
        android:layout_marginRight="@dimen/common_layout_margin"
        android:layout_marginTop="6dip"
        android:background="@color/color_ffffff" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            
            android:layout_marginRight="70dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/pay_money_pay_qishu_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="10000"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/T4" />

            <TextView
                android:id="@+id/pay_money_pay_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_money_pay_qishu_num_tv"
                android:layout_marginTop="15dip"
                android:text="2017-03-14借"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/T0" />

            <TextView
                android:id="@+id/pay_money_pay_money_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="3/6"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/T4" />

            <TextView
                android:id="@+id/pay_money_pay_lixi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/pay_money_pay_money_num_tv"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:text="含利息、手续费：48(元)"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/T0" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pay_money_pay_state_btn"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:background="@drawable/hxcommon_btn_normal_bg_e5e5e5"
            android:gravity="center"
            android:text="已还清"
            android:textColor="@color/color_cccccc"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dip"
            android:textSize="@dimen/T3" />
    </FrameLayout>

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:layout_marginLeft="@dimen/common_layout_margin"
        android:background="@color/color_e5e5e5" />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:background="@color/color_e5e5e5"
        android:visibility="gone" />

</LinearLayout>