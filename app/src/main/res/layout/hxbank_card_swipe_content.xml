<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff" 
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/bank_card_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:layout_marginRight="1dip"
        android:background="@drawable/m_icon_bank_card_bg_blue" >

        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/m_icon_jianhang_logo" />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dip"
            android:layout_marginTop="15dip"
            android:text="中国建设银行"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/T3" />

        <TextView
            android:id="@+id/bank_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dip"
            android:layout_marginTop="40dip"
            android:text="储蓄卡"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/T0" />

        <TextView
            android:id="@+id/bank_card_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:text="@string/defaut_bank_card_text"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/T3" />

        <TextView
            android:id="@+id/bank_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="15dip"
            android:text="**** **** **** 8101"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/T6" />
    </FrameLayout>

</LinearLayout>