<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/jiaoyi_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/hxdialog_bg"
        android:gravity="center"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dip"
            android:gravity="center"
            android:text="@string/input_loan_money_password_text"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/T5" />

        <com.zhongan.demo.hxin.view.JYPEditText
            android:id="@+id/loan_money_deal_passwordnum_et"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dip"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_marginRight="@dimen/common_layout_margin"
            android:layout_marginTop="20dp"
            android:maxLength="@integer/max_len"
            android:password="@bool/is_password"
            android:cursorVisible="false"
            />
    </LinearLayout>

</LinearLayout>