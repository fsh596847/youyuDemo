<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/zhanghu_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/m_icon_common_bg" >

                <FrameLayout
                    android:layout_width="145dip"
                    android:layout_height="145dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dip"
                    android:background="@drawable/hxcricle_normal_bg" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/zhanghu_can_used_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/color_ff7920"
                            android:textSize="@dimen/T6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dip"
                            android:text="@string/can_used_num_tip_text"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/T1" />

                        <TextView
                            android:id="@+id/zhanghu_total_used_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dip"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/T0" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/loan_pay_money_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dip"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/zhanghu_loan_money_btn"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/m_icon_loan_money"
                        android:gravity="center"
                        android:padding="0dip"
                        android:text="@string/loan_money_text"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/T2" />

                    <TextView
                        android:id="@+id/zhanghu_manager_bank_card_btn"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/m_icon_bank_card"
                        android:gravity="center"
                        android:padding="0dip"
                        android:text="@string/bank_card_tip_text"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/T2" />
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:layout_marginTop="6dip"
                android:background="@color/color_d9d9d9" />

          

            <FrameLayout
                android:id="@+id/person_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_edit_text_height"
                android:background="@color/color_ffffff"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_layout_margin"
                    android:layout_gravity="center_vertical"
                    android:text="@string/person_center_text"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/T2" />

                <com.zhongan.demo.hxin.view.CircleImageView
                    android:id="@+id/person_img_iv"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="30dip"
                    android:src="@drawable/m_icon_person_three" />

                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_layout_margin"
                    android:src="@drawable/m_icon_enter"/>
            </FrameLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:background="@color/color_d9d9d9" />
             <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:layout_marginTop="6dip"
                android:background="@color/color_d9d9d9" />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_ffffff">
                 <FrameLayout
                android:id="@+id/loan_pay_record_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_edit_text_height"
                android:background="@color/color_ffffff"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_layout_margin"
                    android:layout_gravity="center_vertical"
                    android:text="@string/loan_pay_record_text"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/T2" />

                <TextView
                    android:id="@+id/loan_pay_record_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="30dip"
                    android:text="@string/has_delayed_text"
                    android:textColor="@color/color_ff0000"
                    android:textSize="@dimen/T1"/>

                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_layout_margin"
                    android:src="@drawable/m_icon_enter"/>
            </FrameLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:layout_marginLeft="@dimen/common_layout_margin"
                android:background="@color/color_d9d9d9" />
              <FrameLayout
                android:id="@+id/common_problem_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_edit_text_height"
                android:background="@color/color_ffffff"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_layout_margin"
                    android:layout_gravity="center_vertical"
                    android:text="@string/common_problem_text"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/T2" />


                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_layout_margin"
                    android:src="@drawable/m_icon_enter"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:layout_marginLeft="@dimen/common_layout_margin"
                android:background="@color/color_d9d9d9" />
              <FrameLayout
                android:id="@+id/abount_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_edit_text_height"
                android:background="@color/color_ffffff"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_layout_margin"
                    android:layout_gravity="center_vertical"
                    android:text="@string/about_text"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/T2" />


                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_layout_margin"
                    android:src="@drawable/m_icon_enter"/>
            </FrameLayout>
            </LinearLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_high"
                android:background="@color/color_d9d9d9" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>