<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/person_center_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="110dip"
                        android:background="@drawable/m_icon_person_center_bg" />

                    <LinearLayout
                        android:id="@+id/loan_pay_money_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="15dip"
                        android:layout_marginTop="10dip"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/person_head_iv"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:background="@color/color_ffffff"
                            android:padding="1dip"
                            android:src="@drawable/m_icon_person_three" />

                        <TextView
                            android:id="@+id/person_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/T4" />

                        <ImageView
                            android:id="@+id/person_true_name_iv"
                            android:layout_width="50dip"
                            android:layout_height="17dip"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/m_icon_not_true_name" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:background="@color/color_d9d9d9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:layout_marginTop="6dip"
                    android:background="@color/color_d9d9d9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/person_center_moblie_fl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_edit_text_height"
                        android:background="@color/color_ffffff" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_layout_margin"
                            android:text="@string/bangding_phone_text"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/T2" />

                        <TextView
                            android:id="@+id/person_center_moblie_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/common_layout_margin"
                          
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/T1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/common_layout_margin"
                            android:src="@drawable/m_icon_enter" 
                            android:visibility="gone"/>
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_high"
                        android:layout_marginLeft="@dimen/common_layout_margin"
                        android:background="@color/color_d9d9d9" />

                    <FrameLayout
                        android:id="@+id/person_center_true_name_fl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_edit_text_height"
                        android:background="@color/color_ffffff" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_layout_margin"
                            android:text="@string/true_name_text"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/T2" />

                        <TextView
                            android:id="@+id/person_center_true_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="30dip"
                            android:text="@string/alreday_open_text"
                            android:textColor="@color/color_999999"
                            android:visibility="visible"
                            android:textSize="@dimen/T1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/common_layout_margin"
                            android:src="@drawable/m_icon_enter" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_high"
                        android:layout_marginLeft="@dimen/common_layout_margin"
                        android:visibility="visible"
                        android:background="@color/color_d9d9d9" />

                    <FrameLayout
                        android:id="@+id/person_center_idcard_img_upload_fl"
                        android:layout_width="match_parent"
                         android:layout_height="@dimen/common_edit_text_height"
                        android:visibility="gone"
                        android:background="@color/color_ffffff" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_layout_margin"
                            android:text="@string/idcard_img_upload_text"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/T2" />

                        <TextView
                            android:id="@+id/person_center_idcard_img_upload_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="30dip"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/T1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/common_layout_margin"
                            android:src="@drawable/m_icon_enter" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:visibility="gone"
                    android:background="@color/color_d9d9d9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:layout_marginTop="6dip"
                    android:visibility="gone"
                    android:background="@color/color_d9d9d9" />

                <FrameLayout
                    android:id="@+id/person_center_accound_safe_fl"
                    android:layout_width="match_parent"
                     android:layout_height="@dimen/common_edit_text_height"
                    android:background="@color/color_ffffff" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/common_layout_margin"
                        android:text="@string/account_anquan_text"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/T2" />

                    <TextView
                        android:id="@+id/person_center_accound_safe_tip_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="30dip"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/T1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/common_layout_margin"
                        android:src="@drawable/m_icon_enter" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:background="@color/color_d9d9d9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:layout_marginTop="6dip"
                    android:background="@color/color_d9d9d9" />

                <Button
                    android:id="@+id/person_center_logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_edit_text_height"
                    android:background="@color/color_ffffff"
                    android:gravity="center"
                    android:text="@string/logout_text"
                    android:visibility="gone"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/T6" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:background="@color/color_d9d9d9" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/person_center_back_btn"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="@dimen/common_layout_margin"
            android:layout_marginTop="@dimen/common_layout_margin"
            android:background="@null"
            android:drawableLeft="@drawable/m_icon_back_white"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/T6" />
    </FrameLayout>

</LinearLayout>