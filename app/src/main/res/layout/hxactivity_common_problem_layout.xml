<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <include layout="@layout/hxtop_title_bar_layout" />
    <ListView
        android:id="@+id/common_problem_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dip"
        android:layout_marginTop="76dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:focusable="false"
        android:listSelector="#00000000"
        android:scrollbars="@null" />
    <RadioGroup
        android:id="@+id/common_problem_rg"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/color_ffffff"
        android:layout_gravity="bottom"
        android:checkedButton="@+id/common_problem_zhenxin_btn"
        android:orientation="horizontal"
        android:weightSum="2" >

        <RadioButton
            android:id="@id/common_problem_zhenxin_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/m_icon_zhengxing"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="3dip"
            android:text="@string/zhengxin_abount_text"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/T2"
            />

        <View
            android:layout_width="@dimen/line_high"
            android:layout_height="45dip"
            android:layout_gravity="center_vertical"
            android:background="@color/color_d9d9d9" />

        <RadioButton
            android:id="@+id/common_problem_hetong_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="3dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/m_icon_hetong"
            android:button="@null"
            android:gravity="center"
            android:text="@string/hetong_tiaokuan_text"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/T2"
             />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high"
        android:layout_gravity="center_vertical"
        android:background="@color/color_d9d9d9" />

   

</FrameLayout>