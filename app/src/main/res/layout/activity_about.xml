<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <com.zhongan.demo.view.TopNavigationView
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleColor="@color/color_000000"
        app:titleText="关于"
        app:titleSize="12sp"
        app:leftDrawable="@drawable/m_icon_back"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divide" />

    <LinearLayout
        android:id="@+id/about_youyu"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/color_666666"
            android:drawableLeft="@mipmap/icon_youyu"
            android:drawablePadding="5dp"
            android:text="关于有余"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divide"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/color_666666"
            android:drawableLeft="@mipmap/version_msg"
            android:drawablePadding="5dp"
            android:text="版本信息"/>

        <TextView
            android:id="@+id/version_msg"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/color_666666"
            android:drawablePadding="5dp"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divide"
        />

</LinearLayout>