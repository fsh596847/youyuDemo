<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/hxtop_title_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/loan_money_result_iv"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dip" />

            <TextView
                android:id="@+id/loan_money_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dip"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/T6" />

            <LinearLayout
                android:id="@+id/loan_money_sucess_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dip"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:background="@color/color_e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/color_ffffff"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_layout_margin"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|left"
                        android:text="@string/loan_money_daikuanjine_text"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/T4" />

                    <TextView
                        android:id="@+id/loan_money_loan_number_tv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_layout_margin"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical|right"
                        android:text="10000"
                        android:textColor="@color/color_738cc4"
                        android:textSize="@dimen/T4" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:layout_marginLeft="@dimen/common_layout_margin"
                    android:background="@color/color_e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/color_ffffff"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_layout_margin"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|left"
                        android:text="@string/loan_money_daikuanjine_text"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/T4" />

                    <TextView
                        android:id="@+id/loan_money_to_zhanghu_tv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_layout_margin"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical|right"
                        android:text="中信银行 储蓄卡(7304)"
                        android:textColor="@color/color_738cc4"
                        android:textSize="@dimen/T4" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_high"
                    android:background="@color/color_e5e5e5" />
            </LinearLayout>
            <View 
                android:id="@+id/failure_view"
                android:layout_width="match_parent"
                android:layout_height="150dip"/>
            <Button
                android:id="@+id/loan_money_result_back_shouye_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_btn_height"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="60dip"
                android:background="@drawable/hxcommon_btn_normal_bg"
                android:gravity="center"
                android:text="@string/finish_text"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/T5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>