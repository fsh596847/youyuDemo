<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    >

    <consumer.fin.rskj.com.library.views.TopNavigationView2
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleColor="@android:color/black"
        app:titleText="还款确认"
        app:titleSize="15sp"
        app:leftDrawable="@mipmap/back_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@mipmap/confirm_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="还款金额"/>


            <TextView
                android:id="@+id/repayAmt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="收款银行卡"/>



            <TextView
                android:id="@+id/card_type"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text=""
                android:gravity="center"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <EditText
                android:id="@+id/sms_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="请输入手机验证码"/>


            <TextView
                android:id="@+id/getCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:text="获取验证码"
                android:textColor="@color/color_66ff7920"
                />

        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/common_button_selector"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:text="提交"
        android:textSize="18sp" />



</LinearLayout>
