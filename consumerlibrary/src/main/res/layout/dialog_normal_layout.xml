<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
         android:background="@drawable/dialog_bg"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="@string/title_alert"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_18"
            android:visibility="visible" />

        <View
            android:id="@+id/dialog_tip_line"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/divide" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="@string/exit_tip"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_line_height"
            android:background="@color/color_d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@color/color_31c2ff"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/dialog_line"
                android:layout_width="@dimen/driver_line_height"
                android:layout_height="match_parent"
                android:background="@color/color_d9d9d9" />

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dip"
                android:layout_height="40.0dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/color_31c2ff"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>