<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <consumer.fin.rskj.com.library.views.TopNavigationView2
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleColor="@color/black"
        app:titleText="还款详情"
        app:titleSize="15sp"
        app:leftDrawable="@mipmap/back_b"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@id/topbar"
        android:layout_width="match_parent"
        android:minHeight="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center|left"
            android:textSize="12sp"
            android:text="当月应还金额"/>

        <TextView
            android:id="@+id/totalPayAll"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:gravity="center|left"
            android:textSize="20sp"
            android:textColor="@color/color_ff7920"
            android:textStyle="bold"
            android:text="0.00"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loanStartData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center|left"
                android:text="--"/>

            <TextView
                android:id="@+id/loanAmt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:gravity="center|left"
                android:text="借款金额:0.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center|left"
                android:text="利息:0.00"/>

            <TextView
                android:id="@+id/loanTerm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:gravity="center|left"
                android:text="贷款期数:0"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bankCardMsg"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:gravity="center|left"
            android:text="到款账户:--"/>


    </LinearLayout>

    <me.leefeng.lfrecyclerview.LFRecyclerView
        android:id="@+id/pull_refresh_list"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:layout_marginBottom="50dp"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/checkall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:drawableLeft="@drawable/check_selector"
            android:drawablePadding="5dp"
            android:scaleType="centerCrop"
            android:text="全选"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="总计:0.00"
                    android:textColor="@color/color_666666"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total_lixi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="含利息:0.00"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/total_faxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="罚息:0.00"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/repayment"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@mipmap/bbg"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="全额还款"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>



