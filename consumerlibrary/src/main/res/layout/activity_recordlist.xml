<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <consumer.fin.rskj.com.library.views.TopNavigationView2
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleColor="@android:color/black"
        app:titleText="借还款记录"
        app:titleSize="15sp"
        app:leftDrawable="@mipmap/back_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:textSize="@dimen/text_size_17"
            android:layout_height="match_parent"
            android:text="借款记录"/>

        <TextView
            android:id="@+id/payment_record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:background="@mipmap/pop"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/black"
            android:text="还款记录"/>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>


</LinearLayout>



