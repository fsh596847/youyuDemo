<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_title_bar_layout" />

    <include
        layout="@layout/face_tip_layout"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/face__result_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="60dip"
        android:orientation="vertical" >

        <Button
            android:id="@+id/face_result_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_btn_height"
            android:background="@drawable/rskj_common_button_selector"
            android:text="@string/finish_face"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_17" />

        <Button
            android:id="@+id/face_result_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_btn_height"
            android:background="@drawable/rskj_common_button_selector"
            android:gravity="center"
            android:text="@string/start_face_again"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</LinearLayout>